<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsinghua.tsinghelper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".InitActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.bgFullScreen">

        </activity>

        <activity android:name=".MainActivity" />

        <!-- home fragment -->
        <activity
            android:name=".ui.home.TasksTypeActivity"
            android:label="TasksTypeActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".ui.mine.PublishedTasksActivity"
            android:label="PublishedTasksActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".ui.task.TaskDetail"
            android:label="TaskDetail">
        </activity>

        <!-- mine fragment -->
        <activity
            android:name=".ui.mine.DoingTasksActivity"
            android:label="DoingTasksActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".ui.mine.profile.ProfileActivity"
            android:label="InfoProfileActivity"
            android:parentActivityName=".MainActivity" />

        <!-- message fragment -->
        <activity
            android:name=".ui.messages.MessageDetail"
            android:label="MessageDetail"
            android:parentActivityName=".MainActivity" />

        <!-- task fragment -->
        <activity android:name=".ui.task.NewTaskTypeActivity" />
        <activity
            android:name=".ui.task.CommunityTaskActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.task.MealTaskActivity" />
        <activity android:name=".ui.task.StudyTaskActivity" />
        <activity android:name=".ui.task.QuestionnaireTaskActivity" />
        <activity android:name=".ui.mine.profile.ProfileSettingsActivity" />
    </application>

</manifest>