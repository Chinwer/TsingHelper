<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/task_item_margin_top"
    android:layout_marginBottom="@dimen/task_item_margin_bottom"
    android:background="#00000000">

    <ImageView
        android:id="@+id/task_item_avatar"
        android:layout_width="@dimen/task_item_avatar_size"
        android:layout_height="@dimen/task_item_avatar_size"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/task_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/task_item_text_margin"
        android:textColor="@color/task_item_title_color"
        android:textSize="@dimen/task_item_title_size"
        tools:layout_constraintLeft_toEndOf="@id/task_item_avatar" />

    <TextView
        android:id="@+id/task_item_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_item_title"
        android:layout_marginStart="@dimen/task_item_text_margin"
        android:textColor="@color/task_item_reward_color"
        android:textSize="@dimen/task_item_reward_size"
        android:layout_marginLeft="@dimen/task_item_text_margin"
        tools:layout_constraintLeft_toEndOf="@id/task_item_avatar" />

    <TextView
        android:id="@+id/task_item_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_item_reward"
        android:layout_marginStart="@dimen/task_item_text_margin"
        android:textColor="@color/task_item_deadline_color"
        android:textSize="@dimen/task_item_deadline_size"
        android:layout_marginLeft="@dimen/task_item_text_margin"
        tools:layout_constraintLeft_toEndOf="@id/task_item_avatar" />

</RelativeLayout>
