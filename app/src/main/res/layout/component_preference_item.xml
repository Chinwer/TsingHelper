<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/preference_item_margin_start"
        android:textColor="@color/preference_item_title_color"
        android:textSize="@dimen/preference_item_title_size" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/preference_item_margin_start"
        android:layout_toStartOf="@+id/right_arrow"
        android:textColor="@color/preference_item_value_color"
        android:textSize="@dimen/preference_item_value_size" />

    <ImageView
        android:id="@+id/right_arrow"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="@dimen/preference_item_margin_end"
        android:src="@drawable/ic_right_arrow_8dp" />

</RelativeLayout>
