<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IconTextItem">
        <attr name="android:src" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
    </declare-styleable>

    <declare-styleable name="CircleIconTextItem">
        <attr name="android:src"/>
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="borderColor" format="color"/>
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TaskItem">
        <attr name="task_avatar_src" format="reference" />
        <attr name="task_title" format="string" />
        <attr name="task_reward" format="string" />
        <attr name="task_deadline" format="string" />
    </declare-styleable>

    <declare-styleable name="AccountStateItem">
        <attr name="state_icon_src" format="reference" />
        <attr name="state_text" format="string" />
    </declare-styleable>

    <declare-styleable name="MessageItem">
        <attr name="message_icon_src" format="reference" />
        <attr name="message_content_text" format="string" />
        <attr name="message_time_text" format="string" />
    </declare-styleable>

    <declare-styleable name="PreferenceItem">
        <attr name="preference_title" format="string" />
        <attr name="preference_value" format="string" />
    </declare-styleable>

    <declare-styleable name="UserItem">
        <attr name="user_avatar_src" format="reference" />
        <attr name="user_username" format="string" />
        <attr name="user_id" format="string" />
        <attr name="android:src" />
    </declare-styleable>

</resources>
